{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],

      "@components/*": ["./src/shared/components/*"],
      "@utils/*": ["./src/shared/utils/*"],
      "@hooks/*": ["./src/shared/hooks/*"],
      "@context/*": ["./src/context/*"],
      "@styles/*": ["./src/shared/styles/*"],
      "@assets/*": ["./src/assets/*"],
      "@pages/*": ["./src/pages/*"],
      "@types/*": ["./src/types/*"],
      "@constants/*": ["./src/constants/*"],
      "@lib/*": ["./src/shared/lib/*"],
      "@config/*": ["./src/config/*"],
      "@services/*": ["./src/services/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-sitemap.config.js",
    "next.config.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules"],
  "typeRoots": ["./node_modules/@types", "./types"]
}
